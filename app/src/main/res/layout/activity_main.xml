<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity"
    android:weightSum="1">

    <EditText
        android:layout_width="@dimen/widthsize1"
        android:layout_height="@dimen/heightsize1"
        android:id="@+id/editText"
        android:layout_weight="@dimen/weightsize1"
        android:layout_marginLeft="@dimen/marginsize1"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#DDDDDD"
        android:gravity="top|left" />

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/imageView2"
        android:layout_width="@dimen/widthsize2"
        android:layout_height="@dimen/heightsize1"
        android:adjustViewBounds="true"
        android:src="@mipmap/water3"
        android:layout_marginRight="@dimen/marginsize2"
        android:layout_marginEnd="@dimen/marginsize2"
        android:layout_alignTop="@+id/editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button"
        android:text="画像を選択"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <Button
        android:id="@+id/button2"
        android:text="投稿"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/editText"
        android:layout_toRightOf="@id/button"
        android:onClick="alertDialogShow" />

    <ImageView
        android:layout_width="@dimen/widthsize3"
        android:layout_height="@dimen/heightsize3"
        android:id="@+id/image_view"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="@dimen/widthsize4"
        android:layout_height="@dimen/heightsize4"
        android:id="@+id/textView"
        android:layout_above="@+id/image_view"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_marginRight="@dimen/heightsize3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="投稿文章"
        android:id="@+id/textView2"
        android:layout_above="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="プレビュー"
        android:id="@+id/textView3"
        android:layout_above="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

